{
  "name": "investment-tracker",
  "version": "1.0.0",
  "description": "Investment Tracker - Full Stack Application",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm start",
    "start:production": "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port $PORT",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm install --legacy-peer-deps && npm run build",
    "install:frontend": "cd frontend && npm install",
    "dev": "npm start",
    "setup:frontend": "npm run install:frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "investment",
    "tracker",
    "portfolio",
    "fastapi",
    "react",
    "typescript"
  ],
  "author": "Investment Tracker Team",
  "license": "MIT"
}